{
  "compilerOptions": {
    "target": "ES2020", // Phiên bản JavaScript được biên dịch
    "module": "commonjs", // Sử dụng module CommonJS
    "outDir": "./dist", // Thư mục chứa file biên dịch
    "rootDir": "./src", // Thư mục gốc của mã nguồn TypeScript
    "strict": true, // Bật chế độ kiểm tra nghiêm ngặt
    "esModuleInterop": true, // Hỗ trợ import/export ES6
    "skipLibCheck": true, // Bỏ qua kiểm tra kiểu trong thư viện
    "forceConsistentCasingInFileNames": true // Bắt buộc tên file phải đồng nhất
  },
  "include": ["src"], // Bao gồm thư mục src
  "exclude": ["node_modules"] // Loại trừ thư mục node_modules
}
